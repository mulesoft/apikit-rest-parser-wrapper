#%RAML 1.0
title: Illustrate query parameter variations

types:
  author:
    properties:
      name: string
      lastname: string
      addresses?: array
  DynamicFiles:
    type: file
    fileTypes: ['application/octet-stream','image/jpeg','image/png']

/books:
  get:
    queryParameters:
      author:
        displayName: Author
        type: author
        description: An author's full name
        required: false
        examples:
          author1:
            name: John
            lastname: Doe
          author2:
            name: Mary
            lastname: Doe
            addresses: [ 1st Street 125 ]
      publicationYear:
        displayName: Pub Year
        type: number
        description: The year released for the first time in the US
        required: false
      rating:
        displayName: Rating
        type: number
        description: Average rating (1-5) submitted by users
        example: 3.14
        required: false
      isbn:
        displayName: ISBN
        type: string
        minLength: 10
        example: '0321736079'
      tags:
        displayName: Tags
        type: string[]
        example: ["Comedy","Female author"]
        default: ["General"]

  delete:
    description: Delete an item by Code.
    body:
      multipart/form-data:
        properties:
          isbn:
            displayName: ISBN
            type: string
            minLength: 10
            example: '0321736079'

/documents:
  post:
    body:
      multipart/form-data:
        properties:
          first:
            type: file
            fileTypes: 'image/jpeg'
            minLength: 8
            maxLength: 5000
          second:
            type: file
            fileTypes: 'image/jpeg'
            minLength: 8
            maxLength: 5000
          third:
            type: file
          Attachments:
            type: array
            items:
              type: file
              minLength: 0
              maxLength: 5242880
            minItems: 3
            maxItems: 5

/dynamic-files:
  post:
    body:
      multipart/form-data:
        properties:
          files:
            type: DynamicFiles[]