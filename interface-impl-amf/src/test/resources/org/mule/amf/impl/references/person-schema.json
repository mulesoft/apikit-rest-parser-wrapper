{
  "definitions": {
    "Person": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "address": {
          "$ref": "person-schemas/address-schema.yaml#/Address"
        },
        "phone": {
          "$ref": "person-schemas/phone-schema.yml"
        }
      },
      "required": [
        "username"
      ]
    }
  }
}